<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/findme_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/findme" />

    <TextView
        android:id="@+id/from_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/from_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/from_city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_city_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/from_city_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/company_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comapany_label_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/get_company_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/companies_txt" />

    <TextView
        android:id="@+id/to_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_address_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/to_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/to_city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_city_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/to_city_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>